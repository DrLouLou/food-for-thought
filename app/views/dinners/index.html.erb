<h1 style='font-family: Arizonia; font-size: 40px; margin-top: 20px;'><em>JoinADinner</em></h1>

<div class="cards-container">
  <% @dinners.shuffle.each do |dinner| %>
    <div class="card-trip">
      <%= link_to dinner_path(dinner) do %>
        <% if dinner.photo.attached? %>
          <img class="card-img" src="<%= cl_image_path dinner.photo.key, maximumheight: 300, maximumwidth: 100, crop: :fill %>"/>
        <% else %>
          <img class="card-img" src=<%= dinner.image_url %> />
        <% end %>

  <div class="card-trip-infos">
    <div>
      <h2><%= dinner.title %></h2>
      <p><strong>Cuisine: </strong><%= dinner.cuisine %> - <strong>Capacity: </strong><%= dinner.capacity %></p>
      <p><strong>Location: </strong><%= dinner.location %></p>
    </div>
      <h2 class="card-trip-pricing">Â£<%= dinner.price %></h2>
    </div>
  <% end %>
    </div>
  <% end %>
</div>







