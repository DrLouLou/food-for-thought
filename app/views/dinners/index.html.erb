<div class="cards-container">
  <% @dinners.each do |dinner| %>
    <div class="card-trip">
      <%= link_to dinner_path(dinner) do %>
        <% if dinner.photo.attached? %>
          <img class="card-img" src="<%= cl_image_path dinner.photo.key, height: 300, width: 400, crop: :fill %>"/>
        <% else %>
          <img class="card-img" src="https://images.unsplash.com/photo-1485963631004-f2f00b1d6606?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60"/>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= dinner.title %></h2>
            <p><strong>Cuisine: </strong><%= dinner.cuisine %> </p>
            <p><strong>Capacity: </strong><%= dinner.capacity %></p>
          </div>
          <h2 class="card-trip-pricing">Â£<%= dinner.price %></h2>
        </div>
      <% end %>
    </div>
  <% end %>
</div>







