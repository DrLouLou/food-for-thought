<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= locals[:styling] %>" id="navbar">
    <%= link_to :root, class: 'navbar-brand' do %>
    <%= image_tag 'logo.png' %>
  <% end %>
  <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
    <span class='navbar-toggler-icon'></span>
  </button>
  <div class='collapse navbar-collapse' id='navbarSupportedContent'>
    <ul class='navbar-nav mr-auto'>
      <li class='nav-item'>
        <%= link_to 'Help', '#', class: 'nav-link' %>
      </li>
      <li class='nav-item'>
        <%= link_to 'Host a dinner', new_dinner_path, class: 'nav-link' %>
      </li>
      <% if current_user.nil? %>
        <li class='nav-item'>
          <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
        </li>
        <li class='nav-item'>
          <%= link_to 'Log in', new_user_session_path, class: 'nav-link' %>
        </li>
      <% else %>
        <li class='nav-item'>
          <%= link_to 'My Bookings', root_path, class: 'nav-link' %>
        </li>
        <li class='nav-item'>
          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
